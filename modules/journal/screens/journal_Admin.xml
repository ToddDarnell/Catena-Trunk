<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>
			Journal Admin
		</screenTitle>
		<!-- Build the box for the background of fields -->
		<box>
			<id>JournalAdminBox</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>240px</height>
				<color>Primary</color>
				<zIndex>1</zIndex>
				<fontWeight>bold</fontWeight>
			</style>
			<!-- Journal entry subject (The person the journal entry is about) -->
			<label>
				<text>User</text>
				<style>
					<top>10px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<style>
					<display>none</display>
				</style>
				<id>journalAdminSubject_UserEdit</id>
				<search>subject</search>
			</input>

			<select>			
				<id>journalAdmin_Type</id>
				<title>The type of user messages</title>
				<search>subjectType</search>
				<style>
					<top>70px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</select>
			
			<label>
				<text>Organization</text>
				<style>
					<top>10px</top>
					<left>325px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>			
				<id>journalAdmin_Org</id>
				<title>The messages posted by or about users in this organization</title>
				<search>organization</search>
				<style>
					<top>30px</top>
					<left>325px</left>
					<zIndex>2</zIndex>
				</style>
			</select>
			<label>
				<id>journalAdminSubject_SelectedUser</id>
				<style>
					<top>70px</top>
					<left>125px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<!-- Message Date From -->
			<label>
				<text>From Date</text>
				<style>
					<top>130px</top>
					<left>25px</left><!--Old Value for date fields was 25px...-->
					<zIndex>2</zIndex>
				</style>
			</label>
			<calendar>
				<id>Journal_CalendarFrom</id>
				<top>150px</top>
				<left>25px</left>             
				<required>false</required>          
			</calendar>
			<input>
				<id>Journal_HiddenFromDate</id>
				<style>
					<display>none</display>
				</style>
				<search>fromDate</search>
			</input>        	
			<label>
				<text>To Date</text>
				<style>
					<top>180px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<calendar>
				<id>Journal_CalendarTo</id>
				<top>200px</top>
				<left>25px</left>              
				<required>false</required>          
			</calendar>
			<input>
				<id>Journal_HiddenToDate</id>
				<style>
					<display>none</display>
				</style>
				<search>toDate</search>
			</input>      		
			<button>
				<text>Search</text>
				<style>
					<top>200px</top>
					<left>500px</left>
					<zIndex>2</zIndex>
				</style>
				<id>submit_journal_Admin</id>
			</button>
			<button>
				<text>New</text>
				<style>
					<top>10px</top>
					<left>500px</left>
					<zIndex>2</zIndex>
				</style>
				<id>clear_journal_Admin</id>
			</button>
		</box>
		<!-- Search results displayed after selecting Search Button
			 Initially hidden table until Search Button selected-->
		<label>
			<id>message_journal_Admin</id>
			<style>
				<position>absolute</position>
				<left>0px</left>
				<top>260px</top>
				<width>600px</width>
				<zIndex>0</zIndex>
				<visibility>hidden</visibility>
			</style>
		</label>
		<table>
			<id>results_journal_Admin</id>
			<style>
				<left>0px</left>
				<top>260px</top>
				<width>600px</width>
			</style>
		</table>		
	</screen>