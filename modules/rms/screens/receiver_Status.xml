<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>Receiver Status</screenTitle>
		<button>
			<text>Submit</text>
			<style>
				<top>225px</top>
				<left>435px</left>
			</style>
			<id>recStatus_Submit</id>
		</button>
		<page>
			<style>
				<fontWeight>bold</fontWeight>
			</style>
			<pageTitle>Add Status</pageTitle>
			<label>
				<text>Name</text>
				<style>
					<top>30px</top>
					<left>20px</left>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recStatus_AddName</id>
				<maxLength>16</maxLength>
                <size>16</size>
				<style>
					<top>50px</top>
					<left>20px</left>
				</style>
			</input>
			<label>
				<text>Description</text>
				<style>
					<top>80px</top>
					<left>20px</left>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recStatus_AddDescription</id>
				<maxLength>255</maxLength>
                <size>25</size>
				<style>
					<top>100px</top>
					<left>20px</left>
				</style>
			</input>
		</page>
		<page>
			<pageTitle>Modify Status</pageTitle>
			<label>
				<text>Status</text>
				<style>
					<top>30px</top>
					<left>20px</left>
				</style>
			</label>
			<select>
				<id>recStatus_ModifyList</id>
				<title>The status to modify</title>
				<style>
					<top>50px</top>
					<left>20px</left>
				</style>
			</select>
			<label>
				<text>Name</text>
				<style>
					<top>80px</top>
					<left>20px</left>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recStatus_ModifyName</id>
				<title>Add the receiver status name</title>
				<maxLength>16</maxLength>
                <size>16</size>
				<style>
					<top>100px</top>
					<left>20px</left>
				</style>
			</input>
			<label>
				<text>Description</text>
				<style>
					<top>130px</top>
					<left>20px</left>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recStatus_ModifyDescription</id>
				<title>Modify the receiver status name</title>
				<maxLength>255</maxLength>
                <size>25</size>
				<style>
					<top>150px</top>
					<left>20px</left>
				</style>
			</input>
		</page>
		<page>
			<pageTitle>Remove Status</pageTitle>
			<label>
				<text>Status</text>
				<style>
					<top>30px</top>
					<left>20px</left>
				</style>
			</label>
			<select>
				<id>recStatus_RemoveList</id>
				<title>Select the receiver status to remove</title>
				<style>
					<top>50px</top>
					<left>20px</left>
				</style>
			</select>
		</page>
	</screen>