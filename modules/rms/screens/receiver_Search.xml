<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>Search Receivers</screenTitle>
		<box>
			<id>RecSearchBox</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>250px</height>
				<zIndex>1</zIndex>
				<fontWeight>bold</fontWeight>
				<color>Primary</color>
			</style>
			<!-- Control # -->
			<label>
				<text>Control</text>
				<style>
					<top>10px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recSearch_Control</id>
                <search>control</search>
				<maxLength>10</maxLength>
				<size>10</size>
				<title>The 10 digit control id</title>
				<style>
					<top>30px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Receiver status -->
			<label>
				<text>Status</text>
				<style>
				<top>10px</top>
				<left>260px</left>
				<width>150px</width>
				<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>recSearch_StatusList</id>
                <search>status</search>
				<title>The receiver status</title>
				<style>
					<top>30px</top>
					<left>260px</left>
					<width>125px</width>
					<zIndex>2</zIndex>
				</style>
			</select>
			<!-- Receiver data input boxes -->
			<label>
				<text>Receiver</text>
				<style>
					<top>60px</top>
					<left>20px</left>
					<width>75px</width>
					<height>20px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recSearch_Receiver</id>
                <search>receiver</search>
				<maxLength>12</maxLength>
				<size>12</size>
				<title>The 12 digit receiver number not including the R or -</title>
				<style>
					<top>80px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Smart card input boxes -->
			<label>
				<text>Smart Card</text>
				<style>
					<top>60px</top>
					<left>260px</left>
					<width>100px</width>
					<height>18px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recSearch_SmartCard</id>
                <search>smartCard</search>
				<maxLength>12</maxLength>
				<size>12</size>
				<title>The 12 digit smart card number without the S or -</title>
				<style>
					<top>80px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Model data -->
			<label>
				<text>Model</text>
				<style>
					<top>110px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>recSearch_ModelList</id>
                <search>model</search>
				<title>The receiver model</title>
				<style>
					<top>130px</top>
					<left>20px</left>
					<width>150px</width>
					<zIndex>2</zIndex>
				</style>
			</select>
			<!-- Hardware data -->
			<label>
				<text>Hardware</text>
				<style>
					<top>110px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>recSearch_Hardware</id>
                <search>hardware</search>
				<maxLength>4</maxLength>
				<size>4</size>
				<title>The 4 digit hardware id</title>
				<style>
					<top>130px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Owner data -->
			<label>
				<text>Owner</text>
				<style>
					<top>160px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<style>
					<display>none</display>
				</style>
				<id>recSearch_Owner</id>
                <search>owner</search>
			</input>
			<label>
			<id>recSearch_SelectedUser</id>
			<style>
				<top>220px</top>
				<left>20px</left>
				<zIndex>2</zIndex>
			</style>
		  	</label> 	
			<!-- Organization data -->
			<label>
				<text>Organization</text>
				<style>
					<top>160px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<style>
					<display>none</display>
				</style>
				<id>recSearch_Org</id>
                <search>organization</search>
			</input>
			<label>
			<id>recSearch_SelectedOrg</id>
			<style>
				<top>220px</top>
				<left>260px</left>
				<zIndex>2</zIndex>
			</style>
		  	</label> 	
		  	<button>
				<text>New</text>
				<style>
					<top>10px</top>
					<left>510px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>clear_receiver_Search</id>
			</button>
			<button>
				<text>Search</text>
				<style>
					<top>220px</top>
					<left>510px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>submit_receiver_Search</id>
			</button>
		</box>
		<label>
			<id>message_receiver_Search</id>
			<style>
				<position>absolute</position>
				<left>0px</left>
				<top>270px</top>
				<width>600px</width>
				<zIndex>1</zIndex>
				<visibility>hidden</visibility>
			</style>
		</label>
        <table>
            <id>results_receiver_Search</id>
            <style>
                <position>absolute</position>
                <left>0px</left>
                <top>270px</top>
                <width>600px</width>
            </style>
        </table>
	</screen>
