<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>
			Modify Receiver
		</screenTitle>
		<button>
			<text>Back</text>
			<style>
				<top>200px</top>
				<left>150px</left>
				<zIndex>2</zIndex>
			</style>
			<id>recModifyBack</id>
		</button>
		<button>
			<text>Update</text>
			<style>
				<top>200px</top>
				<left>350px</left>
				<zIndex>2</zIndex>
			</style>
			<id>recModifyButton</id>
		</button>
		<!-- build the box for these items -->
		<box>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>180px</height>
				<zIndex>1</zIndex>
				<fontWeight>bold</fontWeight>
				<color>Primary</color>
			</style>
			<!-- Receiver data input boxes -->
			<label>
				<text>Receiver</text>
				<style>
				<top>10px</top>
				<left>20px</left>
				<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>RecModifyReceiver</id>
				<imageName>RecModifyReceiverImg</imageName>
				<maxLength>10</maxLength>
				<size>10</size>
				<title>The 10 digit receiver number not including the R</title>
				<style>
					<top>10px</top>
					<left>100px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<input>
				<type>text</type>
				<id>RecModifyReceiverCRC</id>
				<imageName>RecModifyReceiverImg</imageName>
				<maxLength>2</maxLength>
				<size>2</size>
				<title>2 digit CRC code</title>
				<style>
					<top>10px</top>
					<left>200px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<img>
				<src>
					../image/icon_info.gif
				</src>
				<id>RecModifyReceiverImg</id>
				<style>
					<top>15px</top>
					<left>250px</left>
					<width>18px</width>
					<zIndex>2</zIndex>
				</style>
				<title>Receiver number includes 10 digits in the first box and the 2 CRC digits in the second box. Do not add the R at the beginning.</title>
			</img>
			<!-- Smart card input boxes -->
			<label>
				<text>Smart Card</text>
				<style>
					<top>40px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>RecModifySmartcard</id>
				<imageName>RecModifySmartcardImg</imageName>
				<maxLength>10</maxLength>
				<size>10</size>
				<title>The 10 digit smart card number without the S</title>
				<style>
					<top>40px</top>
					<left>100px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<input>
				<type>text</type>
				<id>RecModifySmartcardCRC</id>
				<imageName>RecModifySmartcardImg</imageName>
				<maxLength>2</maxLength>
				<size>2</size>
				<title>2 digit CRC code</title>
				<style>
					<top>40px</top>
					<left>200px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<img>
				<src>
					../image/icon_info.gif
				</src>
				<id>RecModifySmartcardImg</id>
				<style>
					<top>45px</top>
					<left>250px</left>
					<width>18px</width>
					<zIndex>2</zIndex>
				</style>
				<title>Smart card number includes 10 digits in the first box and the 2 CRC digits in the second box</title>
			</img>
			<!-- Hardware data -->
			<label>
				<text>Hardware</text>
				<style>
					<top>70px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>RecModifyHardware</id>
				<maxLength>4</maxLength>
				<size>4</size>
				<title>The 4 digit hardware id</title>
				<style>
					<top>70px</top>
					<left>100px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<img>
				<src>
					../image/icon_info.gif
				</src>
				<id>RecModifyHardwareImg</id>
				<style>
					<top>75px</top>
					<left>250px</left>
					<width>18px</width>
					<zIndex>2</zIndex>
				</style>
				<title>4 digit hardware id</title>
			</img>
			<!-- Receiver status -->
			<label>
				<text>Status</text>
				<style>
				<top>100px</top>
				<left>20px</left>
				<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>RecModifyStatusList</id>
				<title>The receiver status</title>
				<style>
					<top>100px</top>
					<left>100px</left>
					<zIndex>2</zIndex>
				</style>
			</select>
			<label>
				<text>Organization</text>
				<style>
				<top>100px</top>
				<left>275px</left>
				<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>RecModifyHardwareOrgList</id>
				<title>The receivers new organization</title>
				<style>
					<top>100px</top>
					<left>375px</left>
				</style>
			</select>
			<img>
				<src>
					../image/icon_info.gif
				</src>
				<id>RecModifyStatusListImg</id>				
				<style>
					<top>105px</top>
					<left>250px</left>
					<width>18px</width>
					<zIndex>2</zIndex>
				</style>
				<title>Select the receiver's current state.</title>
			</img>
		<!-- Model data -->
			<label>
				<text>Model</text>
				<style>
				<top>10px</top>
				<left>275px</left>
				<width>75px</width>
				<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<disabled>true</disabled>
				<type>text</type>
				<id>ReceiverModifyModel</id>
				<title>Receiver model. This field is filled in by inputting the hardware id</title>
				<style>
					<top>10px</top>
					<left>375px</left>
					<width>100px</width>
					<zIndex>2</zIndex>
				</style>
			</input>
		</box>
	</screen>
