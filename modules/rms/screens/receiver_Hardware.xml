<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>Receiver Hardware</screenTitle>
		<style>
			<color>Primary</color>
			<fontWeight>bold</fontWeight>
			<position>absolute</position>
		</style>
		<box>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>20px</height>
				<position>absolute</position>
			</style>
			
			<label>
				<text>Model</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>receiverHardware_ModelList</id>
                <title>Type a user name here</title>
				<style>
					<top>0px</top>
					<left>100px</left>
					<zIndex>2</zIndex>
				</style>
			</select>
		</box>
		<box>
			<id>receiverHardware_Box</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>65px</top>
				<left>0px</left>
				<width>600px</width>
				<height>80px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Add Hardware</text>
				<style>
					<top>10px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<maxLength>2</maxLength>
				<size>2</size>
				<id>receiverHardware_AddHardware</id>
				<style>
					<top>30px</top>
					<left>25px</left>
				</style>
			</input>
			<button>
				<id>receiverHardware_Submit</id>
				<text>Add</text>
				<style>
					<top>30px</top>
					<left>150px</left>
					<zIndex>2</zIndex>
				</style>
			</button>

		</box>
		<table>
			<id>receiverHardware_HardwareTable</id>
			<style>
				<left>0px</left>
				<top>185px</top>
				<width>600px</width>
			</style>
		</table>		
	</screen>
