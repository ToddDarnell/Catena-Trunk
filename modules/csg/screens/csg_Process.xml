<?xml version="1.0" encoding="utf-8"?>
<screen>
	<screenTitle>Process CSG Request</screenTitle>
	<box>
		<id>csgProcess_Box</id>
		<style>
			<position>absolute</position>
			<backgroundColor>Secondary</backgroundColor>
			<left>0px</left>
			<top>0px</top>
			<width>600px</width>
			<height>130px</height>
			<color>Primary</color>
			<fontWeight>bold</fontWeight>
			<zIndex>1</zIndex>
		</style>
		<label>
			<text>Request</text>
			<style>
				<top>10px</top>
				<left>25px</left>
				<zIndex>2</zIndex>
			</style>
		</label>
		<div>
			<id>csgProcess_Request</id>
			<title>Request number</title>
			<style>
				<top>30px</top>
				<left>25px</left>
				<width>150px</width>
				<zIndex>2</zIndex>
				<color>Primary</color>
				<backgroundColor>Tertiary</backgroundColor>
			</style>
		</div>
		<label>
			<text>Requester</text>
			<style>
				<top>65px</top>
				<left>25px</left>
				<width>100px</width>
				<zIndex>2</zIndex>
			</style>
		</label>
		<div>
			<id>csgProcess_Owner</id>
			<maxLength>75</maxLength>
			<title>The person who posted this request</title>
			<style>
				<top>85px</top>
				<left>25px</left>
				<width>150px</width>
				<zIndex>2</zIndex>
				<color>Primary</color>
				<backgroundColor>Tertiary</backgroundColor>
			</style>
		</div>
		<label>
			<text>Status</text>
			<style>
				<top>10px</top>
				<left>200px</left>
				<zIndex>2</zIndex>
			</style>
		</label>
		<div>
			<id>csgProcess_Status</id>
			<title>The requests last status</title>
			<style>
				<top>30px</top>
				<left>200px</left>
				<width>100px</width>
				<zIndex>2</zIndex>
				<color>Primary</color>
				<backgroundColor>Tertiary</backgroundColor>
			</style>
		</div>
		<label>
			<text>Status Date</text>
			<style>
				<top>65px</top>
				<left>200px</left>
				<zIndex>2</zIndex>
			</style>
		</label>
		<div>
			<id>csgProcess_StatusDate</id>
			<title>The date of the last status update</title>
			<style>
				<top>85px</top>
				<left>200px</left>
				<width>100px</width>
				<zIndex>2</zIndex>
				<color>Primary</color>
				<backgroundColor>Tertiary</backgroundColor>
			</style>
		</div>
		<label>
			<text>Status Details</text>
			<style>
				<top>10px</top>
				<left>330px</left>
				<zIndex>2</zIndex>
			</style>
		</label>
		<div>
			<id>csgProcess_StatusDetails</id>
			<title>The date of the last status update</title>
			<style>
				<top>30px</top>
				<left>330px</left>
				<width>235px</width>
				<height>75px</height>
				<zIndex>2</zIndex>
				<color>Primary</color>
				<backgroundColor>Tertiary</backgroundColor>
			</style>
		</div>
		<button>
			<id>csgProcess_userDetails</id>
			<text>User Details</text>
			<title>Opens a star base page containing user details</title>
			<style>
				<top>115px</top>
				<left>30px</left>
				<zIndex>2</zIndex>
			</style>
		</button>
	</box>
	<box>
		<style>
			<position>absolute</position>
			<backgroundColor>Secondary</backgroundColor>
			<left>0px</left>
			<top>170px</top>
			<width>600px</width>
			<height>120px</height>
			<color>Primary</color>
			<fontWeight>bold</fontWeight>
			<zIndex>1</zIndex>
		</style>
		<label>
			<text>Status Comments</text>
			<style>
				<top>10px</top>
				<left>20px</left>
				<zIndex>2</zIndex>
			</style>
		</label>
		<textArea>
			<id>csgProcess_NewStatusDetail</id>
			<style>
				<position>absolute</position>
				<left>20px</left>
				<top>30px</top>
				<width>250px</width>
				<height>80px</height>
				<zIndex>1</zIndex>
			</style>
		</textArea>
		<label>
			<text>New Status</text>
			<style>
				<top>10px</top>
				<left>300px</left>
				<zIndex>2</zIndex>
			</style>
		</label>
		<select>
			<id>csgProcess_NewStatusList</id>
			<style>
				<position>absolute</position>
				<left>300px</left>
				<top>30px</top>
				<width>125px</width>
				<zIndex>1</zIndex>
			</style>
		</select>
		<button>
			<id>csgProcess_Submit</id>
			<text>Update</text>
			<title>Update the status of this request</title>
			<style>
				<position>absolute</position>
				<left>500px</left>
				<top>30px</top>
				<width>80px</width>
				<zIndex>1</zIndex>
			</style>
		</button>
		<button>
			<id>csgProcess_Cancel</id>
			<text>Cancel</text>
			<title>Return to the previous screen and unlock this transaction</title>
			<style>
				<position>absolute</position>
				<left>500px</left>
				<top>90px</top>
				<width>80px</width>
				<zIndex>1</zIndex>
			</style>
		</button>
	</box>
	<table>
		<id>csgProcess_Table</id>
		<style>
			<left>0px</left>
			<top>320px</top>
			<width>600px</width>
		</style>
	</table>
</screen>
