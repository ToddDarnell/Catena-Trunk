<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>Search CSG Transactions</screenTitle>
		<box>
			<id>CSGSearchBox</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>200px</height>
				<zIndex>1</zIndex>
				<fontWeight>bold</fontWeight>
				<color>Primary</color>
			</style>
			<label>
				<text>Transaction</text>
				<style>
					<top>10px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>csgSearch_Transaction</id>
                <search>transid</search>
				<size>12</size>
				<title>Transaction number</title>
				<style>
					<top>30px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<label>
				<text>Status</text>
				<style>
				<top>10px</top>
				<left>260px</left>
				<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>csgSearch_StatusList</id>
                <search>status</search>
				<title>The receiver status</title>
				<style>
					<top>30px</top>
					<left>260px</left>
					<width>125px</width>
					<zIndex>2</zIndex>
				</style>
			</select>
			<label>
				<text>Receiver</text>
				<style>
					<top>60px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>csgSearch_Receiver</id>
                <search>receiver</search>
				<maxLength>12</maxLength>
				<size>12</size>
				<title>The 12 digit receiver number not including the R or -</title>
				<style>
					<top>80px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Smart card input boxes -->
			<label>
				<text>Smart Card</text>
				<style>
					<top>60px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>csgSearch_SmartCard</id>
                <search>smartCard</search>
				<maxLength>12</maxLength>
				<size>12</size>
				<title>The 12 digit smart card number without the S or -</title>
				<style>
					<top>80px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<label>
				<text>Submitter</text>
				<style>
					<top>110px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<style>
					<display>none</display>
				</style>
				<id>csgSearch_User</id>
                <search>user_info</search>
			</input>
			<label>
			<id>csgSearch_SelectedUser</id>
			<style>
				<top>170px</top>
				<left>20px</left>
				<zIndex>2</zIndex>
			</style>
		  	</label>
			<!-- Organization data -->
			<label>
				<text>Organization</text>
				<style>
					<top>110px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>csgSearch_Org</id>
        		<search>organization</search>
				<style>
					<display>none</display>
				</style>
			</input>
			<label>
			<id>csgSearch_SelectedOrg</id>
			<style>
				<top>170px</top>
				<left>260px</left>
				<zIndex>2</zIndex>
			</style>
		  	</label>
			<button>
				<style>
					<top>10px</top>
					<left>510px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>clear_csg_Search</id>
			</button>
			<button>
				<text>Search</text>
				<style>
					<top>170px</top>
					<left>510px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>submit_csg_Search</id>
			</button>
		</box>
		<label>
			<id>message_csg_Search</id>
			<style>
				<position>absolute</position>
				<left>0px</left>
				<top>220px</top>
				<width>600px</width>
				<zIndex>1</zIndex>
				<visibility>hidden</visibility>
			</style>
		</label>
        <table>
            <id>results_csg_Search</id>
            <style>
                <position>absolute</position>
                <left>0px</left>
                <top>220px</top>
                <width>600px</width>
            </style>
        </table>
	</screen>
