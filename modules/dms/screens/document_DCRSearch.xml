<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>Search DCRs</screenTitle>
		<box>
			<id>DCRSearchBox</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>250px</height>
				<zIndex>1</zIndex>
				<fontWeight>bold</fontWeight>
				<color>Primary</color>
			</style>
			<!-- Request # -->
			<label>
				<text>Request #</text>
				<style>
					<top>10px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>dcrSearch_Request</id>
                <search>requestId</search>
				<maxLength>10</maxLength>
				<size>12</size>
				<title>The request number</title>
				<style>
					<top>30px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- DCR status -->
			<label>
				<text>Status</text>
				<style>
				<top>10px</top>
				<left>260px</left>
				<width>150px</width>
				<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>dcrSearch_StatusList</id>
                <search>status</search>
				<title>The DCR current status</title>
				<style>
					<top>30px</top>
					<left>260px</left>
					<width>150px</width>
					<zIndex>2</zIndex>
				</style>
			</select>
			<!-- DCR Request Type -->
			<label>
				<text>Request Type</text>
				<style>
					<top>60px</top>
					<left>20px</left>
					<width>125px</width>
					<height>20px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>dcrSearch_RequestType</id>
                <search>reqtype</search>
				<maxLength>10</maxLength>
				<size>12</size>
				<title>The request type</title>
				<style>
					<top>80px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Project / Model -->
			<label>
				<text>Project</text>
				<style>
					<top>60px</top>
					<left>260px</left>
					<width>150px</width>
					<height>18px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>dcrSearch_Project</id>
                <search>project</search>
				<title>The project or model of the request</title>
				<style>
					<top>80px</top>
					<left>260px</left>
					<width>150px</width>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Document Title -->
			<label>
				<text>Document Title</text>
				<style>
					<top>110px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>dcrSearch_DocTitle</id>
                <search>title</search>
				<title>The request document title</title>
				<style>
					<top>130px</top>
					<left>20px</left>
					<width>160px</width>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Document Type list -->
			<label>
				<text>Document Type</text>
				<style>
					<top>110px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>dcrSearch_DocTypeList</id>
                <search>doctype</search>
				<title>The document type of the request</title>
				<style>
					<top>130px</top>
					<left>260px</left>
					<width>150px</width>
					<zIndex>2</zIndex>
				</style>
			</select>
			<!-- Requester -->
			<label>
				<text>Requester</text>
				<style>
					<top>160px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<style>
					<display>none</display>
				</style>
				<id>dcrSearch_Requester</id>
                <search>requester</search>
			</input>
			<label>
			<id>dcrSearch_SelectedRequester</id>
			<style>
				<top>220px</top>
				<left>20px</left>
				<zIndex>2</zIndex>
			</style>
		  	</label> 	
			<!-- Organization data -->
			<label>
				<text>Organization</text>
				<style>
					<top>160px</top>
					<left>260px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<style>
					<display>none</display>
				</style>
				<id>dcrSearch_Org</id>
                <search>organization</search>
			</input>
			<label>
			<id>dcrSearch_SelectedOrg</id>
			<style>
				<top>220px</top>
				<left>260px</left>
				<zIndex>2</zIndex>
			</style>
		  	</label> 	
		  	<button>
				<text>Clear</text>
				<style>
					<top>10px</top>
					<left>510px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>clear_document_DCRSearch</id>
			</button>
			<button>
				<text>Search</text>
				<style>
					<top>220px</top>
					<left>510px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>submit_document_DCRSearch</id>
			</button>
		</box>
		<label>
			<id>message_document_DCRSearch</id>
			<style>
				<position>absolute</position>
				<left>0px</left>
				<top>270px</top>
				<width>600px</width>
				<zIndex>1</zIndex>
				<visibility>hidden</visibility>
			</style>
		</label>
        <table>
            <id>results_document_DCRSearch</id>
            <style>
                <position>absolute</position>
                <left>0px</left>
                <top>270px</top>
                <width>600px</width>
            </style>
        </table>
	</screen>
