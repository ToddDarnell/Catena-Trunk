<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>
			Modify Document
		</screenTitle>
		<!-- Build the box for the background of fields -->
		<box>
			<id>docModifyBox</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>150px</height>
				<color>Primary</color>
				<fontWeight>bold</fontWeight>
				<zIndex>1</zIndex>
			</style>
			<!-- Uploads Document and sends Document info to server -->
			<form>
				<encoding>multipart/form-data</encoding>
				<method>post</method>
				<id>modUploadForm</id>
				<action>../modules/dms/server/document_modifyFile.php</action>
				<target>fileLoader</target>
				<!-- Display Document Title -->
				<div>
					<id>CurrentModDocTitle</id>
					<align>center</align>
					<style>
						<color>Secondary</color>				
						<backgroundColor>Primary</backgroundColor>
						<top>0px</top>
						<left>0px</left>
						<width>600px</width>
						<zIndex>2</zIndex>
					</style>
				</div>	
				<!-- Document Version -->
				<label>
					<text>Version</text>
					<style>
						<top>50px</top>
						<left>80px</left>
						<width>75px</width>
						<height>20px</height>
						<zIndex>2</zIndex>
					</style>
				</label>
				<input>
					<type>text</type>
					<id>DocModifyVersion</id>
					<name>DocModifyVersion</name>
					<maxLength>5</maxLength>
					<title>Modify Document version.</title>
					<style>
						<top>70px</top>
						<left>80px</left>
						<width>40px</width>
						<height>22px</height>
						<zIndex>2</zIndex>
					</style>
				</input>
				<label>
					<text>File Path</text>
					<style>
						<width>75px</width>
						<top>50px</top>
						<left>250px</left>
					</style>
				</label>
				<input>
					<id>docModifyUpload</id>
					<name>docModifyUpload</name>
					<type>file</type>
					<style>
						<top>70px</top>
						<left>250px</left>
					</style>
				</input>
				<input>
					<id>modVersionID</id>
					<type>hidden</type>
					<name>modVersionID</name>
				</input>
				<input>
					<id>modDocID</id>
					<type>hidden</type>
					<name>modDocID</name>
				</input>
			</form>
			<button>
				<text>Modify</text>
				<id>modDocButton</id>
				<style>
					<top>170px</top>
					<left>400px</left>
					<zIndex>2</zIndex>
				</style>
			</button>
			<button>
				<text>Back</text>
				<id>modBackButton</id>
				<style>
					<top>170px</top>
					<left>150px</left>
					<zIndex>2</zIndex>
				</style>
			</button>
		</box>
		<label>
			<text>Uploading file....</text>
			<id>docModLoadingLabel</id>
			<style>
				<top>170px</top>
				<left>420px</left>
				<color>Primary</color>
				<zIndex>2</zIndex>
				<visibility>hidden</visibility>
			</style>
		</label>
	</screen>
