<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>
			Modify Document Details
		</screenTitle>
		<!-- Build the box for the background of fields -->
		<box>
			<id>docDetailModBox</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>300px</height>
				<color>Primary</color>
				<fontWeight>bold</fontWeight>
				<zIndex>1</zIndex>
			</style>
			<!-- Document Title -->
			<label>
				<text>Title</text>
				<style>
					<top>10px</top>
					<left>25px</left>
					<width>18px</width>
					<height>20px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>DocDetailModTitle</id>
				<maxLength>75</maxLength>
				<title>The document's full name</title>
				<style>
					<top>30px</top>
					<left>25px</left>
					<width>250px</width>
					<height>22px</height>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Document Description -->
			<label>
				<text>Description</text>
				<style>
					<top>80px</top>
					<left>25px</left>
					<width>75px</width>
					<height>18px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<textarea>
				<id>DocDetailModDescription</id>
				<maxLength>350</maxLength>
				<title>The document description</title>
				<style>
					<top>100px</top>
					<left>25px</left>
					<width>255px</width>
					<height>100px</height>
					<zIndex>2</zIndex>
				</style>
			</textarea>
			<!-- Document Type -->
			<label>
				<text>Type</text>
				<style>
				<top>10px</top>
				<left>340px</left>
				<width>75px</width>
				<height>18px</height>
				<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>DocDetailModTypeList</id>
				<title>The document type</title>
				<style>
					<top>30px</top>
					<left>340px</left>
					<width>150px</width>
					<height>20px</height>
					<zIndex>2</zIndex>
				</style>
			</select>
			<!-- Document Organization -->
			<label>
				<text>Organization</text>
				<style>
					<top>90px</top>
					<left>340px</left>
					<width>75px</width>
					<height>18px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>DocDetailModOrgList</id>
				<title>The organization that created the Document.</title>
				<style>
					<top>110px</top>
					<left>340px</left>
					<width>150px</width>
					<height>20px</height>
					<zIndex>2</zIndex>
				</style>
			</select>
		</box>
			<button>
			<text>Modify</text>
			<id>modDocDetailButton</id>
			<style>
				<top>320px</top>
				<left>400px</left>
				<zIndex>2</zIndex>
			</style>
		</button>
		<button>
			<text>Back</text>
			<id>modDetailBackButton</id>
			<style>
				<top>320px</top>
				<left>150px</left>
				<zIndex>2</zIndex>
			</style>
		</button>
		<label>
			<text>Uploading file....</text>
			<id>docModifyLoadingLabel</id>
			<style>
				<top>320px</top>
				<left>440px</left>
				<zIndex>2</zIndex>
				<display>none</display>
			</style>
		</label>
	</screen>
