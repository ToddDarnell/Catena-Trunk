<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>
			Search Documents
		</screenTitle>
		<!-- Build the box for the background of fields -->
		<box>
			<id>DocumentSearchBox</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>150px</height>
				<color>Primary</color>
				<zIndex>1</zIndex>
				<fontWeight>bold</fontWeight>
			</style>
			<!-- Document Title -->
			<label>
				<text>Title</text>
				<style>
					<top>10px</top>
					<left>20px</left>
					<width>18px</width>
					<height>20px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>SearchDocTitle</id>
				<search>title</search>
				<maxLength>75</maxLength>
				<title>Search by each option or a combination of any three options: Title, Description, or Type.</title>
				<style>
					<top>30px</top>
					<left>20px</left>
					<width>150px</width>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Document Description -->
			<label>
				<text>Description</text>
				<style>
					<top>10px</top>
					<left>260px</left>
					<width>75px</width>
					<height>18px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<id>SearchDocDescription</id>
				<search>description</search>
				<maxLength>100</maxLength>
				<title>Search by each option or a combination of any three options: Title, Description, or Type.</title>
				<style>
					<top>30px</top>
					<left>260px</left>
					<width>150px</width>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Document Organization -->
			<label>
	      		  <text>Organization</text>
 		    	  <style>
		            <top>60px</top>
		            <left>20px</left>
		            <width>75px</width>
		            <height>18px</height>
		            <zIndex>2</zIndex>
	      		  </style>
			</label>
			<select>
	  		  <id>SearchDocOrgList</id>
	          	  <name>SearchDocOrgList</name>
	          	  <title>The organization the Document belongs to.</title>
			  <search>organization</search>
	          	  <style>
	        	    <top>80px</top>
	        	    <left>20px</left>
	        	    <width>150px</width>
	        	    <zIndex>2</zIndex>
	  		  </style>
			</select>
		  	<!-- Document Type -->
			<label>
				<text>Type</text>
				<style>
					<top>60px</top>
					<left>260px</left>
					<width>75px</width>
					<height>18px</height>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>SearchDocTypeList</id>
				<title>Search by each option or a combination of any three options: Title, Description, or Type.</title>
				<search>type</search>
				<style>
					<top>80px</top>
					<left>260px</left>
					<width>150px</width>
					<zIndex>2</zIndex>
				</style>
			</select>
			<button>
				<text>Search</text>
				<style>
					<top>120px</top>
					<left>500px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>submit_document_Search</id>
			</button>
			<button>
				<text>New</text>
				<style>
					<top>10px</top>
					<left>500px</left>
					<width>75px</width>
					<zIndex>2</zIndex>
				</style>
				<id>clear_document_Search</id>
			</button>
		</box>
		<!-- Search results displayed after selecting Search Button
			 Initially hidden table until Search Button selected-->
		<label>
			<id>message_document_Search</id>
			<style>
				<position>absolute</position>
				<left>5px</left>
				<top>170px</top>
				<width>600px</width>
				<zIndex>0</zIndex>
				<visibility>hidden</visibility>
			</style>
		</label>
		<table>
			<id>results_document_Search</id>
			<!--<border>1</border>-->
			<style>
				<left>0px</left>
				<top>170px</top>
				<width>600px</width>
			</style>
		</table>		
		<label>
			<style>
				<zIndex>2</zIndex>
				<width>100px</width>
				<visible>hidden</visible>
			</style>
			<id>versionPopup</id>
		</label>
	</screen>
