<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>
			Search Messages
		</screenTitle>
		<!-- Build the box for the background of fields -->
		<box>
			<id>messageBoardSearch</id>
			<style>
				<position>absolute</position>
				<backgroundColor>Secondary</backgroundColor>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
				<height>300px</height>
				<color>Primary</color>
				<zIndex>1</zIndex>
				<fontWeight>bold</fontWeight>
			</style>
			<!-- Message Subject -->
			<label>
				<text>Subject</text>
				<style>
					<top>10px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>SearchMsgSubject</id>
				<search>subject</search>
				<maxLength>75</maxLength>
				<title>Search fields individually or by using any combination of fields.</title>
				<style>
					<top>30px</top>
					<left>20px</left>
					<width>200px</width>
					<zIndex>2</zIndex>
				</style>
			</input>
			<!-- Message Body -->
			<label>
				<text>Message</text>
				<style>
					<top>80px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<textarea>
				<id>SearchMsgBody</id>
				<search>body</search>
				<maxLength>255</maxLength>
				<title>Search fields individually or by using any combination of fields.</title>
				<style>
					<top>100px</top>
					<left>20px</left>
					<width>255px</width>
					<height>100px</height>
					<zIndex>2</zIndex>
				</style>
			</textarea>		
			<!-- Message Poster -->
			<label>
				<text>Posted By</text>
				<style>
					<top>220px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>SearchMsgPoster</id>
                <search>poster</search>
 				<style>
					<zIndex>2</zIndex>
					<display>none</display>
				</style>
			</input>
			<label>
			<id>SearchMsg_SelectedUser</id>
			<style>
				<top>270px</top>
				<left>20px</left>
				<zIndex>2</zIndex>
			</style>
		  </label>
			<!-- Message Priority -->
		<label>
			<text>Priority</text>
			<style>
			<top>10px</top>
			<left>320px</left>
			<zIndex>2</zIndex>
			</style>
		</label>
		<select>
			<id>SearchMsgPriority</id>
			<title>The Priority of the Message</title>
			<search>priority</search>
			<style>
				<top>30px</top>
				<left>320px</left>
				<zIndex>2</zIndex>
			</style>
		</select>
			<label>
				<text>From Date</text>
				<style>
					<top>80px</top>
					<left>320px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
		<calendar>
          <id>MsgSearch_CalendarFrom</id>
          <title>The Submission Date of the message</title><!--Not working?-->
          <top>100px</top>
          <left>320px</left>             
          <required>false</required>          
      	</calendar>
      	<input>
      		<id>msg_hiddenFrom</id>
      		<style>
      			<top>255px</top>
          		<left>340px</left>
      			<display>none</display>
      		</style>
      		<search>fromDate</search>
      	</input>        	
			<!-- Message Date To -->			
			<label>
				<text>To Date</text>
				<style>
					<top>155px</top>
					<left>320px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
		<calendar>
          <id>MsgSearch_CalendarTo</id>
          <title>The Submission Date of the message</title><!--Not working?-->
          <top>175px</top>
          <left>320px</left>              
          <required>false</required>          
      	</calendar>
      	<input>
      		<id>msg_hiddenTo</id>
      		<style>
      			<top>260px</top>
      			<left>340px</left>
      			<display>none</display>
      		</style>
      		<search>toDate</search>
      	</input>
      	<!-- Message Organization -->
			<label>
				<text>Organization</text>
				<style>
					<top>220px</top>
					<left>320px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<type>text</type>
				<id>SearchMsgOrganization</id>
        		<search>organization</search>
				<style>
					<display>none</display>
				</style>
			</input>
			<label>
			<id>SearchMsg_SelectedOrg</id>
			<style>
				<top>270px</top>
				<left>320px</left>
				<zIndex>2</zIndex>
			</style>
		  </label>
			<button>
				<text>Search</text>
				<style>
					<top>270px</top>
					<left>500px</left>
					<zIndex>2</zIndex>
				</style>
				<id>submit_message_Search</id>
			</button>
			<button>
				<text>New</text>
				<style>
					<top>10px</top>
					<left>500px</left>
					<zIndex>2</zIndex>
				</style>
				<id>clear_message_Search</id>
			</button>
		</box>
		<!-- Search results displayed after selecting Search Button
			 Initially hidden table until Search Button selected-->
		<label>
			<id>message_message_Search</id>
			<style>
				<position>absolute</position>
				<left>0px</left>
				<top>320px</top>
				<width>600px</width>
				<zIndex>0</zIndex>
				<visibility>hidden</visibility>
			</style>
		</label>
		<table>
			<id>results_message_Search</id>
			<style>
				<left>0px</left>
				<top>320px</top>
				<width>600px</width>
			</style>
		</table>		
	</screen>
