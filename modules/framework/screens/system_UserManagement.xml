<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>User Accounts</screenTitle>
		<style>
			<color>Primary</color>
			<fontWeight>bold</fontWeight>
			<position>absolute</position>
		</style>
		<div>
			<id>userManagement_tab</id>
			<style>
				<top>80px</top>
				<left>0px</left>
			</style>
		</div>
		<box>
			<id>userManagement_box</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>20px</height>
			</style>
			<label>
				<text>User</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<label>
				<id>userManagement_UserSelected</id>
				<style>
					<top>0px</top>
					<left>275px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
		</box>
		<!-- The box for assigning-removing rights -->
		<box>
			<id>userManagement_DetailScreen</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>160px</height>
			</style>
			<!-- Organization tree -->
			<input>
				<style>
					<top>10px</top>
					<left>20px</left>
				</style>
				<type>CHECKBOX</type>
				<id>userManagement_Active</id>
				<title>Check to enable the user account</title>
			</input>
			<label>
				<text>E mail</text>
				<style>
					<top>50px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<id>userManagement_Email</id>
				<style>
					<left>20px</left>
					<top>70px</top>
					<width>270px</width>
				</style>
			</input>
			<label>
				<text>Organization</text>
				<style>
					<top>100px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>userManagement_Organization</id>
				<style>
					<top>120px</top>
					<left>20px</left>
					<width>175px</width>
				</style>
			</select>

			<label>
				<text>Active</text>
				<title>Check to enable the user account</title>
				<style>
					<top>10px</top>
					<left>40px</left>
				</style>
			</label>
			<button>
				<text>Submit</text>
				<style>
					<top>140px</top>
					<left>435px</left>
				</style>
				<id>userManagement_Submit</id>
			</button>
			<button>
				<id>userManagement_starbase</id>
				<text>Starbase</text>
				<title>Opens a star base page containing user details</title>
				<style>
					<top>40px</top>
					<left>435px</left>
					<zIndex>2</zIndex>
				</style>
			</button>
		</box>
		<box>
			<id>userManagement_AddRightBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>80px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Add Right</text>
				<style>
					<top>10px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>userManagement_AddRightList</id>
				<style>
					<top>30px</top>
					<left>25px</left>
					<width>175px</width>
				</style>
			</select>
			<label>
				<id>userManagement_OrgText</id>
				<text>Organization</text>
				<style>
					<top>10px</top>
					<left>230px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>userManagement_OrgList</id>
				<style>
					<top>30px</top>
					<left>230px</left>
				</style>
			</select>
			<table>
				<id>userManagement_RightsTable</id>
				<style>
					<left>0px</left>
					<top>100px</top>
					<width>600px</width>
				</style>
			</table>
		</box>
		<box>
			<id>userManagement_GroupBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>80px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Add Group</text>
				<style>
					<top>10px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>userManagement_GroupList</id>
				<style>
					<top>30px</top>
					<left>25px</left>
					<width>175px</width>
				</style>
			</select>
			<table>
				<id>userManagement_GroupTable</id>
				<style>
					<left>0px</left>
					<top>105px</top>
					<width>600px</width>
				</style>
			</table>
		</box>
		<table>
			<id>userManagement_AssignedTable</id>
			<style>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
			</style>
		</table>
	</screen>