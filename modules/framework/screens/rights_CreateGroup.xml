<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>New Group</screenTitle>
		<width>700</width>
		<height>600</height>
		<label>
			<text>Name</text>
			<style>
				<left>20</left>
				<top>20</top>
			</style>
		</label>
		<input>
			<id>rightGroup_Name</id>
			<style>
				<left>20px</left>
				<top>40px</top>
				<width>270px</width>
			</style>
		</input>
		<label>
			<text>Description</text>
			<style>
				<left>20</left>
				<top>80</top>
			</style>
		</label>
		<textarea>
			<id>rightGroup_Description</id>
			<style>
				<left>20</left>
				<top>100</top>
				<width>270</width>
				<height>100</height>
			</style>
		</textarea>		
		
		<label>
			<text>Organization</text>
			<style>
				<left>20</left>
				<top>225</top>
			</style>
		</label>
		<select>
			<id>rightGroup_AddOrgList</id>
			<style>
				<left>120</left>
				<top>225</top>
			</style>
		</select>
		<button>
			<text>Submit</text>
			<style>
				<top>270px</top>
				<left>140px</left>
			</style>
			<id>rightGroup_Submit</id>
		</button>
		<button>
			<text>Cancel</text>
			<style>
				<top>270px</top>
				<left>230px</left>
			</style>
			<id>rightGroup_Cancel</id>
		</button>
	</screen>