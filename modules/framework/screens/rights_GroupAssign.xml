<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>Right Groups Management</screenTitle>
		<style>
			<color>Primary</color>
			<fontWeight>bold</fontWeight>
			<position>absolute</position>
		</style>
		<!-- The box for filtering the user -->
		<box>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>20px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Right Group</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>groupAssign_GroupList</id>
				<title>Select a right group here</title>
				<style>
					<top>0px</top>
					<left>110px</left>
					<width>175px</width>
				</style>
			</select>
			<button>
				<text>Delete</text>
				<title>Delete selected right group</title>
				<id>groupAssign_RemoveGroup</id>
				<style>
					<top>0px</top>
					<left>400px</left>
				</style>
			</button>
			<button>
				<text>Add New</text>
				<title>Add new right group</title>
				<id>groupAssign_AddNewGroup</id>
				<style>
					<top>0px</top>
					<left>500px</left>
				</style>
			</button>
		</box>
		<div>
			<id>groupAssign_tab</id>
			<style>
				<top>80px</top>
				<left>0px</left>
			</style>
		</div>
		<box>
			<id>groupAssign_DetailsBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>160px</height>
				<position>absolute</position>
			</style>
			<button>
				<text>Modify</text>
				<title>Modify group details</title>
				<id>rightGroup_ModifyButton</id>
				<style>
					<top>0px</top>
					<left>375px</left>
				</style>
			</button>
			<button>
				<text>Cancel</text>
				<title>Cancel this modification</title>
				<id>rightGroup_CancelModifyButton</id>
				<style>
					<top>70px</top>
					<left>375px</left>
				</style>
			</button>
			<button>
				<text>Submit</text>
				<title>Submit modifications to organization details</title>
				<id>rightGroup_SubmitModifyButton</id>
				<style>
					<top>100px</top>
					<left>375px</left>
				</style>
			</button>
			<label>
				<text>Name</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<id>rightGroup_ModifyName</id>
				<title>Right group name</title>
				<size>11</size>
				<maxLength>11</maxLength>
				<style>
					<top>20px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<label>
				<text>Description</text>
				<style>
					<top>0px</top>
					<left>175px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<textarea>
				<id>rightGroup_ModifyDescription</id>
				<title>Right group Description</title>
				<style>
					<top>20px</top>
					<left>175px</left>
					<height>100px</height>
					<zIndex>2</zIndex>
				</style>
			</textarea>
			<label>
				<text>Organization Owner</text>
				<style>
					<top>80px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>rightGroup_ModifyOrganization</id>
				<title>Organization owner</title>
				<style>
					<top>100px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</select>

		</box>
		<box>
			<id>groupAssign_RightsBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>60px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Add Right</text>
				<id>groupAssign_AddRightText</id>
				<style>
					<top>0px</top>
					<left>30px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>groupAssign_RightList</id>
				<style>
					<top>25px</top>
					<left>30px</left>
					<width>175px</width>
				</style>
			</select>
			<select>
				<id>groupAssign_OrgList</id>
				<style>
					<top>25px</top>
					<left>225px</left>
				</style>
			</select>
			<table>
				<id>groupAssign_RightsTable</id>
				<style>
					<left>0px</left>
					<top>100px</top>
					<width>600px</width>
				</style>
			</table>		
		</box>
		<table>
			<id>groupAssign_AssignedTable</id>
			<style>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
			</style>
		</table>		
	</screen>
