<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>New Group</screenTitle>
		<width>700</width>
		<height>400</height>
		<label>
			<text>Name</text>
			<style>
				<left>20</left>
				<top>20</top>
			</style>
		</label>
		<input>
			<id>organization_Name</id>
			<maxLength>11</maxLength>
			<style>
				<left>20px</left>
				<top>40px</top>
				<width>270px</width>
			</style>
		</input>
		<label>
			<text>Full Name</text>
			<style>
				<left>20</left>
				<top>80</top>
			</style>
		</label>
		<input>
			<id>organization_FullName</id>
			<maxLength>32</maxLength>
			<style>
				<left>20</left>
				<top>100</top>
				<width>270</width>
			</style>
		</input>		
		
		<label>
			<text>Parent</text>
			<style>
				<left>20</left>
				<top>140</top>
			</style>
		</label>
		<select>
			<id>organization_ParentList</id>
			<style>
				<left>20</left>
				<top>160</top>
			</style>
		</select>
		<button>
			<text>Submit</text>
			<style>
				<top>200px</top>
				<left>160px</left>
			</style>
			<id>organization_Submit</id>
		</button>
		<button>
			<text>Cancel</text>
			<style>
				<top>200px</top>
				<left>230px</left>
			</style>
			<id>organization_Cancel</id>
		</button>
	</screen>