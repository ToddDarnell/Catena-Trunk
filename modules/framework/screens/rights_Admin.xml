<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>System Rights</screenTitle>
		<style>
			<color>Primary</color>
			<fontWeight>bold</fontWeight>
			<position>absolute</position>
		</style>
		<!-- The box for filtering the user -->
		<box>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>20px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Rights</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>rightsAdmin_List</id>
				<title>Select a right here</title>
				<style>
					<top>0px</top>
					<left>120px</left>
					<width>175px</width>
				</style>
			</select>
			<button>
				<text>Add New</text>
				<title>Add new right</title>
				<id>rightsAdmin_AddNew</id>
				<style>
					<top>0px</top>
					<left>500px</left>
				</style>
			</button>
		</box>
		<div>
			<id>rightsAdmin_tab</id>
			<style>
				<top>80px</top>
				<left>0px</left>
			</style>
		</div>
		<box>
			<id>rightsAdmin_DetailsBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>120px</height>
				<position>absolute</position>
			</style>
			<button>
				<text>Modify</text>
				<title>Modify Organization details</title>
				<id>rightsAdmin_ModifyButton</id>
				<style>
					<top>0px</top>
					<left>250px</left>
				</style>
			</button>
			<button>
				<text>Cancel</text>
				<title>Cancel this modification</title>
				<id>rightsAdmin_CancelModifyButton</id>
				<style>
					<top>70px</top>
					<left>250px</left>
				</style>
			</button>
			<button>
				<text>Submit</text>
				<title>Submit modifications to organization details</title>
				<id>rightsAdmin_SubmitModifyButton</id>
				<style>
					<top>100px</top>
					<left>250px</left>
				</style>
			</button>
			<label>
				<text>Name</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<id>rightsAdmin_ModifyName</id>
				<title>Organization short name</title>
				<size>11</size>
				<style>
					<top>20px</top>
					<left>20px</left>
					<width>100</width>
					<zIndex>2</zIndex>
				</style>
			</input>
			<label>
				<text>Description</text>
				<style>
					<top>40px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<id>rightsAdmin_ModifyDescription</id>
				<title>Right description</title>
				<size>25</size>
				<style>
					<top>60px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<label>
				<text>Category</text>
				<style>
					<top>80px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>rightsAdmin_ModifyCategory</id>
				<title>Organization parent</title>
				<style>
					<top>100px</top>
					<left>20px</left>
					<size>20</size>
					<zIndex>2</zIndex>
				</style>
			</select>
		</box>
		<table>
			<id>rightsAdmin_AssignedTable</id>
			<style>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
			</style>
		</table>
	</screen>