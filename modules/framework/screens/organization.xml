<?xml version="1.0" encoding="utf-8"?>
	<screen>
		<screenTitle>Organizations</screenTitle>
		<style>
			<color>Primary</color>
			<fontWeight>bold</fontWeight>
			<position>absolute</position>
		</style>
		<!-- The box for filtering the user -->
		<box>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>20px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Organizations</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>organizations_OrgList</id>
				<title>Select an organization here</title>
				<style>
					<top>0px</top>
					<left>120px</left>
					<width>175px</width>
				</style>
			</select>
			<button>
				<text>Delete</text>
				<title>Delete selected right group</title>
				<id>organizations_DeleteOrg</id>
				<style>
					<top>0px</top>
					<left>350px</left>
				</style>
			</button>
			<button>
				<text>Add New</text>
				<title>Add new right group</title>
				<id>organizations_AddNewOrg</id>
				<style>
					<top>0px</top>
					<left>500px</left>
				</style>
			</button>
		</box>
		<div>
			<id>orgManagement_tab</id>
			<style>
				<top>80px</top>
				<left>0px</left>
			</style>
		</div>
		<box>
			<id>organizations_DetailsBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>120px</height>
				<position>absolute</position>
			</style>
			<button>
				<text>Modify</text>
				<title>Modify Organization details</title>
				<id>organizations_ModifyButton</id>
				<style>
					<top>0px</top>
					<left>500px</left>
				</style>
			</button>
			<button>
				<text>Cancel</text>
				<title>Cancel this modification</title>
				<id>organizations_CancelModifyButton</id>
				<style>
					<top>70px</top>
					<left>500px</left>
				</style>
			</button>
			<button>
				<text>Submit</text>
				<title>Submit modifications to organization details</title>
				<id>organizations_SubmitModifyButton</id>
				<style>
					<top>100px</top>
					<left>500px</left>
				</style>
			</button>
			<label>
				<text>Name</text>
				<style>
					<top>0px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<id>organizations_ModifyName</id>
				<title>Organization short name</title>
				<size>11</size>
				<style>
					<top>20px</top>
					<left>20px</left>
					<width>100</width>
					<zIndex>2</zIndex>
				</style>
			</input>
			<label>
				<text>Full Name</text>
				<style>
					<top>40px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<input>
				<id>organizations_ModifyFullName</id>
				<title>Organization full name</title>
				<size>25</size>
				<maxLength>32</maxLength>
				<style>
					<top>60px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</input>
			<label>
				<text>Parent</text>
				<style>
					<top>80px</top>
					<left>20px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>organizations_ModifyParent</id>
				<title>Organization parent</title>
				<style>
					<top>100px</top>
					<left>20px</left>
					<size>20</size>
					<zIndex>2</zIndex>
				</style>
			</select>
		</box>
		<box>
			<id>organizations_RightsBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>60px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Add Right</text>
				<id>organizations_AddRightText</id>
				<style>
					<top>10px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>organizations_RightList</id>
				<title>Select a right to assign to this organization.</title>
				<style>
					<top>30px</top>
					<left>25px</left>
					<width>175px</width>
				</style>
			</select>
			<select>
				<id>organizations_RightOrgList</id>
				<title>Select an organization to assign to this right</title>
				<style>
					<top>25px</top>
					<left>225px</left>
				</style>
			</select>
			<table>
				<id>organizations_RightsTable</id>
				<style>
					<left>0px</left>
					<top>100px</top>
					<width>600px</width>
				</style>
			</table>		
		</box>
		<box>
			<id>orgManagement_GroupBox</id>
			<style>
				<backgroundColor>Secondary</backgroundColor>
				<top>0px</top>
				<left>0px</left>
				<width>600px</width>
				<height>60px</height>
				<position>absolute</position>
			</style>
			<label>
				<text>Add Group</text>
				<style>
					<top>10px</top>
					<left>25px</left>
					<zIndex>2</zIndex>
				</style>
			</label>
			<select>
				<id>orgManagement_GroupList</id>
				<title>Select a group to assign to this organization</title>
				<style>
					<top>30px</top>
					<left>25px</left>
					<width>175px</width>
				</style>
			</select>
			<table>
				<id>orgManagement_GroupTable</id>
				<style>
					<left>0px</left>
					<top>100px</top>
					<width>600px</width>
				</style>
			</table>
		</box>
		<table>
			<id>orgManagement_AssignedTable</id>
			<style>
				<left>0px</left>
				<top>0px</top>
				<width>600px</width>
			</style>
		</table>
	</screen>